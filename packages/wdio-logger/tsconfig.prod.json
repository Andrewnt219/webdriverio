{
  "extends": "../../tsconfig.prod",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ES2017",
    "moduleResolution": "Node",
    "removeComments": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "../../@types"
  ]
}
